  <tr>
    <td><%= response.request_id %></td>
    <td><%= response.employee_id %></td>
    <td><%= response.comments %></td>
    <td><%= link_to 'Show', request_response_path(@request,response) %></td>    
    <td><%= link_to 'Edit', edit_request_response_path(@request, response) %></td>
    <td><%= link_to 'Destroy', [@request,response], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @response %>

