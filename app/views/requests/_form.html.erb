<% if @request.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

    <ul>
    <% @request.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
   
    <div id="request-title">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div id="request-description">
      <%= f.label :description %>
      <%= f.text_area :task %>
    </div>
  
    <!-- See readme for bootstrap-datepicker (as component) at eternicode/bootstrap-datepicker on github; javascript in domain.js, called in application.js -->
    
    <div id="request_dates">

      <div id="request_start_date">
        <%= f.label :start_date %>
        <div id='start_date_field' class='input-append date datepicker' data-date= '<%= @current_date %>' >
          <%= f.text_field :start_date %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div>  

      <div id="request_end_date">
        <%= f.label :end_date %>
        <div id='end_date_field' class='input-append date datepicker' data-date= '<%= @current_date %>' >
          <%= f.text_field :end_date %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div> 
    </div>     

    <div id="request_dropdowns">
    
      <div id="request_group_dropdown">
        <%= f.label :group %>
        <%= f.select :group, options_for_select(["Development", "Interface Design", "QA", "Infrastructure"]) %>
      </div>
   
      <div id="request_location_dropdown">
        <%= f.label :office %>
        <%= f.select :location, options_for_select(["Bentonville", "Boston", "Chicago", "Houston", "London", "McKinney", "Mumbai", "San Francisco"]) %>
      </div>  
    </div>

    <div id="request_skills_checkboxes">
      <%=f.label :skills_needed, 'Relevant Skills' %>
      <div id="request_column_checkboxes">
        <% all_skills.each do |skill| %>
          <div class="vertical_checkboxes">
          <%= check_box_tag "request[skills_needed][]", skill.name, @request.has_skill?(skill.name) %>
          <%= skill.name %> 
          </div>  
        <% end %>
      </div>
    </div>  


 
    
   
  


