<h1>Make selection</h1>

<%= Response.find(params[:response_id]).employee.name %> to fill Request "<%= Response.find(params[:response_id]).request.task %>"

<%= form_for(@selection) do |f| %> 
  <%= render 'form', :f => f %> </br>
  <%= f.hidden_field :request_id, :value => Response.find(params[:response_id]).request.id %>
  <%= f.hidden_field :response_id, :value => params[:response_id] %>
  <%= f.hidden_field :name, :value => Response.find(params[:response_id]).employee.name %>
  <%= f.hidden_field :employee_id, :value => Response.find(params[:response_id]).employee.id %>
  <%= f.submit "Fill request", class: "btn btn-large btn-primary" %>
<% end %>

<%= link_to 'Back', root_url %>
