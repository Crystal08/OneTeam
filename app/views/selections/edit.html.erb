<h1>Edit Selection</h1>

Edit "<%= Selection.find(params[:id]).name %> to fill Request '<%= Request.find(Selection.find(params[:id]).request.id).task %>' "

<%= form_for(@selection) do |f| %>	  
    <%= render 'form', :f => f %> </br>
    <%= f.hidden_field :request_id, :value => Selection.find(params[:id]).request_id %>
    <%= f.hidden_field :response_id, :value => Selection.find(params[:id]).response_id %>
    <%= f.hidden_field :name, :value => Selection.find(params[:id]).name %>
    <%= f.hidden_field :employee_id, :value => Selection.find(params[:id]).employee_id %>
    <%= f.submit "Update", class: "btn btn-large btn-primary" %>
<% end %>

<%= link_to 'Show', @selection %> |
<%= link_to 'Back', employee_requests_path(@current_employee) %>
