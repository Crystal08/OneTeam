<h1>Edit Selection</h1>

Edit "<%= SelectedEmployee.find(params[:id]).name %> to fill Request '<%= Request.find(SelectedEmployee.find(params[:id]).request.id).task %>' "

<%= form_for(@selected_employee) do |f| %>	  
    <%= render 'form', :f => f %> </br>
    <%= f.hidden_field :request_id, :value => SelectedEmployee.find(params[:id]).request_id %>
    <%= f.hidden_field :response_id, :value => SelectedEmployee.find(params[:id]).response_id %>
    <%= f.hidden_field :name, :value => SelectedEmployee.find(params[:id]).name %>
    <%= f.hidden_field :employee_id, :value => SelectedEmployee.find(params[:id]).employee_id %>
    <%= f.submit "Update", class: "btn btn-large btn-primary" %>
<% end %>

