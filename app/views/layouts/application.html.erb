<!DOCTYPE html>
<html>
<head>
  <title>OneTeam</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="backdrop">
<!-- Styling Header--> 
<div id= "banner">
   <div id= "logo">
    <%= image_tag "oneteamlogo.png" %>
    </div>
    <div id="banner_text">
      <h1>OneTeam...</h1>
      <h2>Where do <em>you</em> fit?</h2>
    </div>
</div>   
<!-- End Styling Header --> 
  <div id="tabbed_area">
  <div class="container">
  <%= render 'layouts/header' %> 
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>	
  </div> 
</body>
</html>

